.baseinput
	margin-bottom 25px
	display flex
	height 37px
	align-items flex-end

	&__textinput
		margin-right 11px
		margin-left 20px
		padding-left 8px
		flex-grow 1
		font-family Courier New
		font-size 30px
		font-weight 300
		line-height 36px
		background-color transparent
		background-image url(/img/post.png)
		background-repeat no-repeat
		background-position bottom left
		border none
		outline none

		&--baseinfo
			padding-bottom 8px

		&--date
			margin-bottom 5px
			margin-left 7px
			padding-bottom 5px
			display block
			width 205px
