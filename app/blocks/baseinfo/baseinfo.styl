.baseinfo
	display block
	border 0
	color #2f1b15
	font-size 23px
	font-weight bold

	&__label
		display flex
		align-items flex-end
		height 37px
		margin-bottom 25px

		&--htmlacademy-label
			height inherit
			padding-left 60px
			position relative
			cursor pointer

			&:after
				position absolute
				content ''
				sprite $radio
				top 0
				left 27px

			&:before
				position absolute
				content ''
				sprite $radiocheck
				top 7px
				left 34px
				display none


	&__textinput
		flex-grow 1
		margin-left 20px
		background-color transparent
		border 0
		outline 0
		font-family Courier New
		font-weight 300
		font-size 30px
		line-height 36px
		background-image url(/img/post.png)
		background-repeat no-repeat
		background-position bottom left
		padding-bottom 8px
		padding-left 8px
		margin-right 11px

	&__htmlacademy
		display flex
		flex-direction row
		margin-top 48px

	&__htmlacademy-radio
		display none

	&__htmlacademy-radio:checked+.baseinfo__label--htmlacademy-label:before
		display block

	&__link
		color #014f98

